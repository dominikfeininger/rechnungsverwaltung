<%= form_tag(create_invoices_path()) do %>
Rechnungsnummer:
<br/>
<%= text_field_tag(:invoicenr, @nextinvoicenumber) %>
<br/>
Firma waehlen:
<br/>
<select id="customer_id" name="customer_id">
	<% @cust = Customer.find(:all, :order => "companyname")
	@cust.each do |cust| %> <option value="<%= cust.id %>"
	<% if @invoice.customer_id == cust.id %> selected="selected" <% end %>
	> <%= cust.companyname %> </option>
	<% end %>
</select>
<br/>
Rechnungsdataum:
<br/>
<input type="text" name="date" id="date" value= "<%=DateTime.now.strftime("%m/%d/%Y") %>" />
<br/>
<br/>
<%= submit_tag "Rechnung anlegen" %>
<% end %>
<script>
	$('#date').datepicker();

</script>
